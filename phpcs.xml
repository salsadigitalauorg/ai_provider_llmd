<?xml version="1.0"?>
<ruleset name="AI Provider LLMD">
  <description>PHP CodeSniffer configuration for AI Provider LLMD module.</description>
  
  <!-- Scan these files -->
  <file>src</file>
  <file>*.module</file>
  <file>*.install</file>
  <file>*.theme</file>
  <file>*.inc</file>
  
  <!-- Exclude vendor directory -->
  <exclude-pattern>*/vendor/*</exclude-pattern>
  <exclude-pattern>*/node_modules/*</exclude-pattern>
  
  <!-- Use Drupal and DrupalPractice rulesets -->
  <rule ref="Drupal"/>
  <rule ref="DrupalPractice"/>
  
  <!-- Show progress and use colors -->
  <arg name="colors"/>
  <arg value="p"/>
  
  <!-- Check these file extensions -->
  <arg name="extensions" value="php,module,inc,install,test,profile,theme,css,info,txt,md,yml"/>
</ruleset>